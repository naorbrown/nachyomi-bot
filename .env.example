# Nach Yomi Bot Configuration
# Copy this file to .env and fill in your values

# Required: Telegram Bot Token from @BotFather
TELEGRAM_BOT_TOKEN=

# Optional: Channel ID for scheduled daily posts
# Public channels: @ChannelUsername
# Private channels: -1001234567890
TELEGRAM_CHANNEL_ID=

# Optional: Admin chat ID for error notifications
# Get your ID from @userinfobot on Telegram
ADMIN_CHAT_ID=

# Optional: Node environment
NODE_ENV=production

# =============================================
# Torah Yomi Unified Channel (Optional)
# =============================================
# These settings enable dual-publishing to the unified Torah Yomi channel

# Channel ID for the unified channel
TORAH_YOMI_CHANNEL_ID=@TorahYomiChannel

# Shared bot token for posting to unified channel
TORAH_YOMI_CHANNEL_BOT_TOKEN=

# Set to 'false' to disable unified channel publishing
TORAH_YOMI_PUBLISH_ENABLED=true
