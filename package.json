{
  "name": "nachyomi-bot",
  "version": "3.0.0",
  "description": "Daily Nach Yomi â€” two chapters per day with audio and video shiurim from Rav Breitowitz via Kol Halashon",
  "main": "src/index.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write \"src/**/*.js\" \"tests/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\" \"tests/**/*.js\"",
    "docker:build": "docker build -t nachyomi-bot .",
    "docker:run": "docker run -d --name nachyomi-bot -e TELEGRAM_BOT_TOKEN=$TELEGRAM_BOT_TOKEN nachyomi-bot",
    "docker:logs": "docker logs -f nachyomi-bot",
    "docker:stop": "docker stop nachyomi-bot && docker rm nachyomi-bot"
  },
  "keywords": [
    "nach-yomi",
    "telegram-bot",
    "torah",
    "kol-halashon",
    "breitowitz",
    "jewish",
    "navi",
    "kesuvim"
  ],
  "author": "naorbrown",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/naorbrown/nachyomi-bot.git"
  },
  "bugs": {
    "url": "https://github.com/naorbrown/nachyomi-bot/issues"
  },
  "homepage": "https://github.com/naorbrown/nachyomi-bot#readme",
  "dependencies": {
    "dotenv": "^17.2.3",
    "node-telegram-bot-api": "^0.66.0"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^2.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "vitest": "^2.1.0"
  }
}
